        const socket = io();
        const sendBtn = document.getElementById("sendBtn");
        const inputMsg = document.getElementById("inputMsg");
        sendBtn.addEventListener("click", (e) => {
            const message = inputMsg.value;
            socket.emit("user-message", message);
